<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlmain"
    android:padding="@dimen/dp10"
    android:background="@color/black"
    >



<RelativeLayout
    android:id="@+id/rlheader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@color/white"
        android:layout_marginRight="@dimen/dp10"
        android:id="@+id/img"
        android:layout_width="@dimen/imagesizewidth"
        android:layout_height="@dimen/imagesizeheight"/>

    <TextView
        android:textStyle="bold"
        android:layout_toRightOf="@id/img"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:id="@+id/ttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/tgenre"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/trate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/ttitle"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/tgenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/trate"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/trelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/trelease"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/tduration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
<LinearLayout
    android:layout_marginTop="@dimen/dp10"
    android:layout_below="@id/rlheader"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/treviews"
            android:layout_marginRight="@dimen/dp10"
            android:text="@string/userreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/tvideo"
            android:text="@string/trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:text="@string/overview"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/toverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>




</RelativeLayout>