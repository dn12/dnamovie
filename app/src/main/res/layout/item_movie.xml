<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlmain"
    android:padding="@dimen/dp10"
    android:background="@color/green30"
    >
    
    
    
    <ImageView
        android:background="@color/white"
        android:layout_marginRight="@dimen/dp10"
        android:id="@+id/img"
        android:layout_width="@dimen/imagelistsizewidth"
        android:layout_height="@dimen/imagelistsizeheight"/>

    <TextView
        android:textStyle="bold"
        android:layout_toRightOf="@id/img"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:id="@+id/ttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/ttitle"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/trate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/trate"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/tgenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/tgenre"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/trelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    
</RelativeLayout>